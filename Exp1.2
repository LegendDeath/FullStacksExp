<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Simple Banking System</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f3f3f3;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }
    #bank-container {
      background: #fff;
      padding: 24px 32px;
      border-radius: 10px;
      box-shadow: 0 4px 18px #ccc;
      text-align: center;
    }
    h2 {
      margin-bottom: 16px;
      color: #23487e;
    }
    #balance {
      font-size: 2em;
      margin: 16px 0;
      color: #26974a;
    }
    input[type="number"] {
      padding: 8px;
      font-size: 1em;
      margin-bottom: 12px;
      width: 160px;
    }
    button {
      padding: 10px 22px;
      margin: 0 8px;
      font-size: 1em;
      border: none;
      border-radius: 5px;
      background: #23487e;
      color: #fff;
      cursor: pointer;
      transition: background 0.2s;
    }
    button:hover {
      background: #1b2c52;
    }
    #message {
      margin-top: 12px;
      font-size: 1em;
      color: #c0392b;
    }
  </style>
</head>
<body>
  <div id="bank-container">
    <h2>Banking System</h2>
    <div>Account Balance:</div>
    <div id="balance">₹ 0.00</div>
    <input type="number" id="amount" placeholder="Enter amount" min="0">
    <br>
    <button onclick="deposit()">Deposit</button>
    <button onclick="withdraw()">Withdraw</button>
    <div id="message"></div>
  </div>

  <script>
    let balance = 0;

    function updateBalance() {
      document.getElementById('balance').textContent = `₹ ${balance.toFixed(2)}`;
    }

    function showMessage(msg, isError = false) {
      const messageDiv = document.getElementById('message');
      messageDiv.textContent = msg;
      messageDiv.style.color = isError ? '#c0392b' : '#26974a';
    }

    function deposit() {
      let amount = parseFloat(document.getElementById('amount').value);
      if (isNaN(amount) || amount <= 0) {
        showMessage('Please enter a valid deposit amount.', true);
        return;
      }
      balance += amount;
      updateBalance();
      showMessage(`Deposited ₹${amount.toFixed(2)} successfully!`);
      document.getElementById('amount').value = '';
    }

    function withdraw() {
      let amount = parseFloat(document.getElementById('amount').value);
      if (isNaN(amount) || amount <= 0) {
        showMessage('Please enter a valid withdrawal amount.', true);
        return;
      }
      if (amount > balance) {
        showMessage('Insufficient balance.', true);
        return;
      }
      balance -= amount;
      updateBalance();
      showMessage(`Withdrew ₹${amount.toFixed(2)} successfully!`);
      document.getElementById('amount').value = '';
    }

    updateBalance();
  </script>
</body>
</html>
